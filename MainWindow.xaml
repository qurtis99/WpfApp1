<Window x:Class="DPGI2.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:DPGI2"
        mc:Ignorable="d"
        Title="Simple Canvas Form" Height="480" Width="820">
    <Canvas Background="LightBlue">
        <Label Content="Label:" FontSize="14" FontWeight="SemiBold" Foreground="#FF333333" Canvas.Left="30" Canvas.Top="30"/>
        <TextBox Text="Text" TextWrapping="Wrap" Width="150" Height="25" Canvas.Left="50" Canvas.Top="60" BorderBrush="#FF999999" BorderThickness="1"/>
        <Button Content="Button" Width="80" Height="30" Canvas.Left="70" Canvas.Top="100" Background="#FF0288D1" Foreground="White" BorderThickness="0"/>
    </Canvas>
</Window>