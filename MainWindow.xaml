<Window x:Class="DPGI2.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:DPGI2"
        mc:Ignorable="d"
        Title="Form Window" Height="480" Width="850">
    <DockPanel>
        <Label DockPanel.Dock="Top" Content="Label" FontSize="16" FontWeight="Bold" Foreground="#FF333333" HorizontalAlignment="Center" Margin="0,10,0,20"/>
        <TextBox Text="TextBox" TextWrapping="Wrap" DockPanel.Dock="Left" Width="340" Margin="10,0,10,0" BorderBrush="#FF999999" BorderThickness="1"/>
        <TextBox Text="TextBox" TextWrapping="Wrap" DockPanel.Dock="Right" Width="340" Margin="10,0,10,0" BorderBrush="#FF999999" BorderThickness="1"/>
        <Button Content="Button" Height="25" Width="120" Margin="0,370,0,0" Background="Black" Foreground="White" BorderThickness="0"/>
    </DockPanel>
</Window>