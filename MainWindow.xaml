<Window x:Class="DPGI2.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:DPGI2"
        mc:Ignorable="d"
        Title="TextEditor" Height="450" Width="800">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
        </Grid.RowDefinitions>

        <Border Grid.Row="0" BorderBrush="#FFCBBEBE" BorderThickness="2" CornerRadius="10" Margin="5">
            <StackPanel Orientation="Horizontal" Margin="5">
                <Button Width="40" Height="40" Margin="5" ToolTip="Open">
                    <Image Source="C:\Users\qurtis\Pictures\Saved Pictures/open_icon.png" Width="24" Height="24"/>
                </Button>
                <Button Width="40" Height="40" Margin="5" ToolTip="Clear">
                    <Image Source="C:\Users\qurtis\Pictures\Saved Pictures/clear_icon.png" Width="24" Height="24"/>
                </Button>
                <Button Width="40" Height="40" Margin="5" ToolTip="Copy">
                    <Image Source="C:\Users\qurtis\Pictures\Saved Pictures/copy_icon.png" Width="24" Height="24"/>
                </Button>
                <Button Width="40" Height="40" Margin="5" ToolTip="Paste">
                    <Image Source="C:\Users\qurtis\Pictures\Saved Pictures/paste_icon.png" Width="24" Height="24"/>
                </Button>
            </StackPanel>
        </Border>

        <Border Grid.Row="1" BorderBrush="#FFCBBEBE" BorderThickness="2" CornerRadius="10" Margin="5">
            <Grid>
                <Grid.RowDefinitions>
                    <RowDefinition Height="*"/>
                    <RowDefinition Height="Auto"/>
                </Grid.RowDefinitions>

                <TextBox Grid.Row="0" TextWrapping="Wrap" AcceptsReturn="True" VerticalScrollBarVisibility="Auto" Margin="10"/>

                <DockPanel Grid.Row="1" Margin="10">
                    <Button Content="OK" Width="80" Height="30" DockPanel.Dock="Bottom" HorizontalAlignment="Right" Background="#FF4CAF50" Foreground="White" BorderThickness="0"/>
                </DockPanel>
            </Grid>
        </Border>
    </Grid>
</Window>